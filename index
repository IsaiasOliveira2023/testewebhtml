<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <button id="downloadButton">Download</button>
    <div id="countdown"></div>
</body>
<script src="script.js"></script>
</html>
#countdown {
    font-size: 24px;
}
document.getElementById("downloadButton").addEventListener("click", function() {
    var countdown = 5; // Defina o tempo de contagem regressiva em segundos

    var countdownInterval = setInterval(function() {
        if (countdown <= 0) {
            clearInterval(countdownInterval);
            startDownload();
        } else {
            document.getElementById("countdown").innerText = "Iniciando o download em " + countdown + " segundos...";
            countdown--;
        }
    }, 1000);
});

function startDownload() {
    // Substitua o URL abaixo pelo link do arquivo que você deseja baixar
    var downloadUrl = "seu_link_de_download_aqui";

    // Crie um elemento de âncora oculto para iniciar o download
    var downloadLink = document.createElement("a");
    downloadLink.href = downloadUrl;
    downloadLink.download = "nome_do_arquivo"; // Nome do arquivo a ser baixado
    downloadLink.style.display = "none";

    document.body.appendChild(downloadLink);

    downloadLink.click();

    document.body.removeChild(downloadLink);
}
